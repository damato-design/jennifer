<ul class='work'>
  {%- for work in collections.page | reverse %}
  <li style="--accent-color: {{ work.data.accent }}">
    <a href="{{ work.url }}">
      {{ work.data.title }}
      {{ work.data.desc }}
      {%- if work.data.roles %}
      {{ work.data.roles | join(',') }}
      {% endif %}
      <img src="{{work.data.img}}"/>
    </a>
  </li>
  {%- endfor %}
</ul>