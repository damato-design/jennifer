---
import Logo from '@assets/shape.svg';

const navigation = {
    About: '/about',
    Work: '/',
    Resume: 'https://resume.damato.design/jennifer',
    Contact: 'https://cal.com/jennifer-damato'
}
---

<style>
    .navigation {
        position: sticky;
        top: 0;
        pointer-events: none;
        margin-block: 1rem;
    }

    nav {
        pointer-events: initial;
        display: flex;
        gap: 1rem;
        justify-content: space-between;
        align-items: center;
    }

    ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    nav :global(svg) {
        height: 1.5lh;
    }
</style>

<div class="navigation">
    <nav class="max-width">
        <Logo/>
        <ul>
            { Object.entries(navigation).map(([label, href]) => <li><a href={ href }>{ label }</a></li>) }
        </ul>
    </nav>
</div>