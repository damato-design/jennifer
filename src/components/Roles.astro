---
const { roles } = Astro.props;
---

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: .5em;
        list-style: none;
        margin: 0;
        padding: 0;
        font-size: .8em;
        text-transform: uppercase;
        font-weight: bolder;
    }

    li {
        white-space: pre;
    }
</style>

<ul>
    { roles.map((role) => <li>{ role }</li>) }
</ul>