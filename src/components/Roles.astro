---
const { roles } = Astro.props;
---

<style>
    ul {
        display: flex;
        flex-wrap: wrap;
        gap: .5em;
        list-style: none;
        margin: 0;
        padding: 0;
        font-size: .8em;
    }

    li {
        padding: .25em .5em;
        border-radius: 100vw;
        background-color: #fafafa;
        border: 1px solid;
    }
</style>

<ul>
    { roles.map((role) => <li>{ role }</li>) }
</ul>